<p id="notice"><%= notice %></p>

<h1 align="center">Players Statistics</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to "Player Name", :sort => "name"%></th>
      <th><%= link_to "Player Score", :sort => "score"%></th>
      <th>Game</th>
      <th colspan="3"> Action </th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.score %></td>
        <td><%= player.game_id || '-'%></td>
        <td><%= link_to 'Details', player %></td>
        <td><%= link_to 'Update', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

